.row
  .span8
    %h1 Sign up
    .well.mt2
      %i.icon-lock
      Please enter your email address, name, password and a password confirmation
  .span8  
    =semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |form|
      =form.inputs do
        =form.input :email
        =form.input :first_name
        =form.input :last_name
        =form.input :password
        =form.input :password_confirmation
        =form.input :remember_me, :as => :boolean if devise_mapping.rememberable?
        =hidden_field_tag :next, params[:next] if params[:next]
      =form.buttons do
        =form.commit_button "Sign up", :button_html => {:class => "btn-primary", :data => {:"loading-text" => "Signing up..."}}
  .span8
    =render("devise/shared/links")