.row
  .span5
    %h2 Forgot your password?
  .span8
    =semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post}) do |form|
      =form.inputs do
        =form.input :email
      =form.buttons do
        =form.commit_button "Send me reset password instructions"
  .span8
    =render("links")